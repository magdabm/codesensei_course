<h1>Edit Comment</h1>

<%= form_for [@movie, @comment] do |f| %>
   <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
   </p>
   <p>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
   </p>
   <p>
      <%= f.submit %>
   </p>
<% end %>

<%= link_to 'Back', movie_path %>
