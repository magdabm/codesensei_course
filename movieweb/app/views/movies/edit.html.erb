
<h1>Edit movie info</h1>

<% if @movie.errors.any? %>
   <div>
      <h4>
         <%= pluralize(@movie.errors.count, 'error') %> prohibited this article from being saved:
      </h4>
      <ul>
         <% @movie.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
   </div>
<% end %>

<%= form_for @movie do |f| %>
   <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
   </p>

   <p>
      <%= f.label :director %><br>
      <%= f.text_field :director %>
   </p>
   <p>
      <%= f.label :country %><br>
      <%= f.text_field :country %>
   </p>
   <p>
      <%= f.label :genre %><br>
      <%= f.text_field :genre %>
   </p>
   <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
   </p>
   <p>
      <%= f.submit %>
   </p>

<% end %>

<%= link_to 'Back', movies_path %>
